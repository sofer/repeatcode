<% if current_user %>
	<div class="bottom-left">
		<% if current_user.login.empty? %>
			Logged in: 
			<%= link_to_unless_current "Save your details", "/about/autologin" %>
		<% else %>
			Logged in as: <%= current_user.login %>
			&raquo; <%= link_to_unless_current "autologin", "/about/autologin" %>
		<% end %>
	</div>
	<div class="bottom-right">
		<% if current_user.administrator %>
			<%= link_to_unless_current 'Admin', administrators_path %> |
		<% end %>
		<% if current_user.manager %>
			<%= link_to_unless_current 'Manage', managers_path %> |
		<% end %>
		<% if not current_user.tutor_groups.empty? %>
			<%= link_to_unless_current 'Groups', groups_path %> |
		<% end %>
		<%= link_to_unless_current "Courses", :controller => 'courses', :action => 'index' %> |
		<% if not current_user.login.empty? %>
			<%= link_to_unless_current "Course materials", :controller => 'subjects', :action => 'index' %> | 
		<% end %>
		<%= link_to_unless_current "FAQ", "/about/faq" %> |
		<%= link_to_unless_current "logout", "/logout"%>
	</div>
<% else %>
	<div class="bottom-left">
		Not logged in
	</div>
	<div class="bottom-right">
		<%= link_to_unless_current "FAQ", "/about/faq" %> | 
		<%= link_to_unless_current "login", "/login"%>
	</div>
<% end %>
