<h1>New exercise</h1>

<% form_for(@exercise) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :topic_id %><br />
    <%= f.text_field :topic_id, :autocomplete => "off"  %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description, :autocomplete => "off"  %>
  </p>
  <p>
    <%= f.label :phrase %><br />
    <%= f.text_field :phrase, :autocomplete => "off"  %>
  </p>
  <p>
    <%= f.label :response %><br />
    <%= f.text_field :response, :autocomplete => "off"  %>
  </p>
  <p>
    <%= f.label :pattern %><br />
    <%= f.text_field :pattern, :autocomplete => "off"  %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', exercises_path %>
