<div id="header">
	<h1 class="top-left pad">
		<%= link_to 'Create', subjects_path %>
		<%= '&raquo;' + link_to(@subject.name, @subject) if @subject %> 
		&raquo; New topic
	</h1>
</div>

<div id="main">
	
	<% form_for @topic do |f| %>
	
		<div id="firstly">

			<div id="choose">
				<div id="choose-import" class="radio button go">
					<input type="radio" name="choice" checked>
					<b>Copy and paste</b> from a table
				</div>
	
				<div id="choose-table" class="radio button space-left">
					<input type="radio" name="choice">
					<b>Start from scratch</b>
				</div>

			</div>
				
			<%= render :partial => "import" %>

			<div id="table" class="topic">

				<% exercises = (1..12).collect { Exercise.new } %>
				<%= render :partial => "exercise_table", :locals => { :exercises => exercises, :add => false } %>
				<div class="small bold pad message warning">Enter some exercises in the table above</div>

				<div class="submit">
					<input id="confirm" type="submit" value="Continue"/>
				</div>

				</div>

		</div>

		<div id="finally">
		
			<%= render :partial => "new_form", :locals => { :f => f } %>
		
		</div>

		<div id="hidden-fields"> </div>

	<% end %>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>

<div id="hidden-exercise-template">
	<%= render :partial => "new_exercise", :layout => "hidden_exercise", :object => Exercise.new  %>
</div>
