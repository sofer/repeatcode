<div id="header">
	<h1 class="top-left pad">
		<%= link_to 'Create', subjects_path %>
		<%= '&raquo;' + link_to(@subject.name, @subject) if @subject %> 
		&raquo; New topic
	</h1>
</div>

<div id="main">
	
	<% form_for @topic do |f| %>
	
		<div id="firstly">

			<div id="choose">
				<div id="choose-import" class="choice-box go">
					<input type="radio" name="choice" checked>
					<div class="comment"><b>Copy and paste</b> from a table</div>
				</div>
	
				<div id="choose-table" class="choice-box">
					<input type="radio" name="choice" checked>
					<div class="comment"><b>Start from scratch</b></div>
				</div>
			</div>
	
			<div class="clear"> </div>
	
			<%= render :partial => "import" %>

			<div id="table" class="topic">
				<div class="small bold pad message warning">Enter some exercises in the table below</div>

				<% exercises = (1..11).collect { Exercise.new } %>
				<%= render :partial => "exercise_table", :locals => { :exercises => exercises } %>

				<div class="bottom-centre">
					<input id="confirm" type="submit" value="Continue"/>
				</div>

				</div>

		</div>

		<div id="finally">
		
			<%= render :partial => "new_form", :locals => { :f => f } %>
		
			<div id="hidden-fields"> </div>
		
			<div class="bottom-centre">
				<%= f.submit "Finish" %>
			</div>

		</div>

	<% end %>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>

<div id="hidden-exercise-template">
	<%= render :partial => "new_exercise", :layout => "hidden_exercise", :object => Exercise.new  %>
</div>
