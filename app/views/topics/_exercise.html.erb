<div class="row exercise">
  <% fields_for_exercise(exercise) do |exercise_form| %>
		<div class="cell quarter">
			<%= exercise_form.text_field :phrase %>
		</div>
		<div class="cell quarter">
			<%= exercise_form.text_field :response %>
		</div>
		<div class="cell fifth">
			<%= exercise_form.text_field :hint %>
		</div>
		<div class="cell fifth">
			<%= exercise_form.text_field :insert %>
		</div>
		<div class="cell tenth right">
			<%= link_to 'Delete', topic_exercise_path(@topic, exercise), :method => :delete %>
		</div>
	<% end %>
</div>