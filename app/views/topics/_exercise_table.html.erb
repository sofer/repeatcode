<table class="topic-exercises-table">
	<thead>
		<tr>
			<th class="first"> </th>
			<th class="input">Question or phrase <%= link_to '?', {}, :class => "help", :help => "#phrase-help" %></th>
			<th class="input">Response <%= link_to '?', {}, :class => "help", :help => "#response-help" %></th>
			<th class="input">Hint <%= link_to '?', {}, :class => "help", :help => "#hint-help" %></th>
			<th class="last"> </th>
		</tr>
	</thead>
	<tbody id="exercises">
		<%= render :partial => "exercise", :collection => exercises %>
		<%= render(:partial => "new_exercise", :object => add) if add %>
	</tbody>
</table>

