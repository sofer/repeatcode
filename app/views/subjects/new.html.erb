<div id="header">
	<h1>
		<%= link_to 'Create', subjects_path %>
		&raquo; New subject
	</h1>
</div>

<div id="edit-subject" class="main">
	<div class="box">
		<fieldset>
			<legend>Create subject</legend>
			<% form_for(@subject) do |f| %>
				<%= render :partial => 'form', :locals => {:f => f } %>
			  <%= f.submit "Create" %>
			<% end %>
		</fieldset>
	</div>
</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>