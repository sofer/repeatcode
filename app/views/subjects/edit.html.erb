<div id="header">
	<h1>
		<%= link_to 'Create', subjects_path %>
		&raquo; <%= link_to @subject.name, @subject %>
		&raquo; Edit
	</h1>
	<h2>
		<%= link_to 'Edit subject', edit_subject_path(@subject) %>
	</h2>
</div>
<div id="edit-subject" class="main">
	
	<div class="box">
		<fieldset>
			<legend>Edit subject</legend>
			<% form_for(@subject) do |f| %>
				<%= render :partial => 'form', :locals => {:f => f } %>
				<div>
					<label>Detected: </label>
					 <code><%= @subject.search_extended_chars %></code> (paste changes above)
				</div>
			  <%= f.submit "Update" %>
			<% end %>
		</fieldset>
	</div>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>