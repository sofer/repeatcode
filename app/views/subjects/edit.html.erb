<div id="header">
	<h1 class="top-left pad">
		<%= link_to 'Courses', courses_path %>
		&raquo; <%= link_to 'Learning materials', subjects_path %>
		&raquo; <%= link_to @subject.name, @subject %>
		&raquo; Edit
	</h1>
	<h2 class="top-right pad">
		<%= link_to 'Edit subject', edit_subject_path(@subject) %>
	</h2>
</div>
<div id="main">
	<% form_for(@subject) do |f| %>

		<%= render :partial => 'form', :locals => {:f => f } %>

	  <p>
	    <%= f.submit "Update" %>
	  </p>
	<% end %>

<p>Non-standard characters detected: <%= @extended %><br>
(Paste into form above to add them to the shortcut menu for users)
</p>


</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>