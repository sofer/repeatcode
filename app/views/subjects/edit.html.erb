<div id="header">
	<h1 class="top-left pad">
		<%= link_to 'Create', subjects_path %>
		&raquo; <%= link_to @subject.name, @subject %>
		&raquo; Edit
	</h1>
	<h2 class="top-right pad">
		<%= link_to 'Edit subject', edit_subject_path(@subject) %>
	</h2>
</div>
<div id="main">
	
	<fieldset>
	<% form_for(@subject) do |f| %>
		<%= render :partial => 'form', :locals => {:f => f } %>
	  <div class="centre space"><%= f.submit "Update" %></div>
	<% end %>

<p>Non-standard characters detected: <%= @extended %><br>
(Paste into text field above to add them to the lesson shortcut menu)
</p>
	</fieldset>


</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>