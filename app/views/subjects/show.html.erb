<div id="header">
	<h1 class="left">
		<%= link_to 'Courses', courses_path %> | 
		<%= link_to 'Materials', subjects_path %> | 
	  <%=h @subject.name %>
	</h1>
	<h2 class="right">
		<%= link_to 'Edit subject', edit_subject_path(@subject) %>
	</h2>
	<div class="clear"></div>
</div>
<div id="main">
	<% for topic in @subject.topics %>
		<p>
			<%= link_to topic.name, edit_topic_path(topic) %>
		</p>
	<% end %>
</div>

<div id="footer">
	<div class="left">
		<br>
		Logged in as: <%= current_user.login %>
	</div>
	<div class="right">
		<br>
		<%= link_to "logout", "/logout"%>
	</div>
</div>