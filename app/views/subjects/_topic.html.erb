<tr class="<%= cycle "odd", "even" -%>">
	<td class="first"><%= topic_counter + 1 %></td>
  <% fields_for_exercise(topic) do |f| %>
		<td class="name">	
			<%= link_to truncate(topic.name,50), edit_topic_path(topic) %>
		</td>
		<td>	
			<%= relative_date topic.last_update %>
		</td>
		<td>
			<%= topic.exercises.current.count %>
		</td>
		<td class="last">
			<% form_for topic do |f| %>
				<%= f.hidden_field :removed, :value => true  %>
				<%= f.submit 'Remove', :class => 'archive-alert' %>
			<% end %>
		</td>
	<% end %>
</td>