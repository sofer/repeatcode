<div id="header">
	<h1>
		Create
	</h1>
</div>
<div id="main">
	
	<table class="subjects-table">
		<thead>
			<tr>
				<th class="first"> </th>
				<th></th>
				<th>Access</th>
				<th>Subject area</th>
				<th>Updated</th>
				<th>Exercises</th>
				<th class="last"> </th>
			</tr>
		</thead>
		<tbody id="subjects">
			<%= render :partial => "subject", :collection => @subjects.active %>
		</tbody>
	</table>

	<div id="table-navigation">
		<span id="up" class="button">&laquo; Previous</span>
		<span id="down" class="button">Next &raquo;</span>
	</div>

	<div class="actions">
		<div class="bold button">
			<%= link_to 'New subject', new_subject_path %>
		</div>
	</div>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>
