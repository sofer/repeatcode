<div id="header">
	<h1 class="left">
		<%= link_to 'Courses', courses_path %> | 
		Materials
	</h1>
	<h2 class="right">
		<%= link_to 'New subject', new_subject_path %>
	</h2>
	<div class="clear"></div>
</div>
<div id="main">
	<table>
		<% for subject in @subjects %>
	  <tr>
	    <td class="bold"><%=h subject.name %></td>
	    <td><%=h subject.public %></td>
	    <td><%= Subject::AREAS[subject.area_id] %></td>
	    <td><%= link_to 'Show', subject %></td>
	    <td><%= 'Archived' if subject.archived %></td>
	    <td><%= link_to 'Archive', subject, :confirm => 'WARNING! This will destroy all course content. Do you really want to do this?', :method => :delete %></td>
	  </tr>
		<% end %>
	</table>
</div>

<div id="footer">
	<div class="left">
		<br>
		Logged in as: <%= current_user.login %>
	</div>
	<div class="right">
		<br>
		<%= link_to "FAQ", "/about/faq" %> |
		<%= link_to "logout", "/logout"%>
	</div>
</div>
