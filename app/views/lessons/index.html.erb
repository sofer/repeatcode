<div id="header">
	<h1>
		<%= link_to 'Courses', courses_path %>
		&raquo; <%= @course.name %>
	</h1>
	<h2>
		<%= render :partial => 'global/course_links' %>
	</h2>
</div>

<div class="main">
	
	<table class="questions-table">
		<thead>
			<tr>
				<th>Started at</th>
				<th>Elapsed time</th>
				<th>Correct this time</th>
				<th>Progress</th>
			</tr>
		</thead>
		<tbody id="lessons">
			<%= render :partial => 'lesson', :collection => @lessons %>
		</tbody>
	</table>

	<%= render :partial => 'global/table_navigation' %>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>