<div id="header">
	<h1>
		<%= link_to 'Courses', courses_path %>
		&raquo; <%= @course.name %>
	</h1>
	<h2>
		<%= render :partial => 'global/course_links' %>
	</h2>
</div>

<div class="main">
	
	<table class="questions-table">
		<thead>
			<tr>
				<th>Started at</th>
				<th>Elapsed time</th>
				<th>Correct this time</th>
				<th>Progress</th>
			</tr>
		</thead>
		<tbody id="lessons">
			<% for lesson in @lessons %>
				<tr>
					<td>
						<%= formatted_date lesson.created_at %>
					</td>
					<td>
						<%= elapsed_time lesson.created_at, lesson.updated_at %>
					</td>
					<td>
						<%= lesson.correct_responses %>
					</td>
					<td>
						<%= lesson.total_questions_started %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div id="table-navigation">
		<span id="up" class="button">&laquo; Previous</span>
		<span id="down" class="button">Next &raquo;</span>
	</div>
	
</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>