<h1>Listing lessons</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Correct responses</th>
  </tr>

<% for lesson in @lessons %>
  <tr>
    <td><%=h lesson.course_id %></td>
    <td><%=h lesson.created_at %></td>
    <td><%=h lesson.updated_at %></td>
    <td><%=h lesson.correct_responses %></td>
     <td><%= link_to 'Show', lesson %></td>
    <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Destroy', lesson, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New lesson', new_lesson_path %>
