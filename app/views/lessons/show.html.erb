<div id="outfox"> </div>

<div id="content">

	<div id="header">
		<h1 class="top-left pad">
	  	<div id="subject"><%= h @lesson.course.name %></div>
		</h1>
		<h2 class="top-right pad">
			<div id="topic"></div>
		</h2>
	</div>

	<div id="main">

		<div class="left">
			Correct responses: <span id="correct-responses"></span> (Target: <span id="target"><%= @lesson.course.lesson_target %></span>)
		</div>
		<div class="right">
			Elapsed time: <span id="elapsed-time">0</span> minutes
		</div>

		<div id="start">
			<div>
				Course loading...<br><br>(<%= link_to "reload" %>)
			</div>
		</div>

		<div id="completed" class="hidden">
			<div>
				Course completed.<br><br>Come back again in <span id="days-til-next"></span> for a review.<br><br>
			</div>
			<div>
				<%= link_to "Back to courses", courses_path %>
			</div>
		</div>

		<div id="question"> </div>
		
		<div id="graph" class="hidden"> </div>
	
		<div id="code-block" class="hidden">
			<div id="data-tab" class="data tab border">
			</div>
			<div id="code-tab" class="code tab border">
			</div>
			<div id="output-tab" class="output tab border">
			</div>
			<div class="clear"></div>
		</div>

		<div id="response" class="hidden">

			<div id="response-message"> </div>

			<div id="translated"> </div>

			<div id="expected-response-block">
				<div id="expected-response"> </div>
				<%= submit_tag "OK", :id => "ok", :class => "space" %>
			</div>

			<div id="response-block" class="centre half">
				<form id="response-form">
					<%= text_field_tag "response-field", nil, :autocomplete => "off" %> 
				</form>
				<div class="clear"> </div>
				<div id="toolbar">
					<div id="palettes">
						<% unless @lesson.course.subject.extended_chars.blank? %>
						<div id="language-palette" class="palette">
							<div class="float-right checkbox">
								<label>ignore accents</label>
								<input type="checkbox" id="ignore-accents">
							</div>
							<div id="extended-chars">
								<%= palette @lesson.course.subject.extended_chars %>
							</div>
						</div>
						<% end %>
						<%= render :partial => 'maths_palette' %>
					</div>
				</div>
			</div>

		</div>
	 	
	</div>

	<div id="footer">
		<div class="bottom-left">
			<span id="details" class="hidden">
				Exercise no: <span id="exercise-no"></span>
				| Question no: <span id="question-no"></span>
				| Repetition no: <span id="current-interval"></span>
				| Backlog: <span id="backlog"></span>
				| <span id="seconds">0</span> seconds
			</span>
			<br>
			<% if current_user.login %>
				Logged in as: <%= current_user.login %>
			<% else %>
				User ID: <%= current_user.uid %>
			<% end %>
		</div>
		<div id="loading"><img src="/images/furniture/loading.gif" width="16" height="16" alt="waiting..." align="right"></div>
		<div class="bottom-right">
			<a href="" id="voices-switch" class="hidden">Voices</a> 
			| <a href="" class="details-switch">Show details</a> 
			<a href="" class="details-switch hidden">Hide details</a> 
			| <%= link_to 'End lesson', courses_path %>
		</div>
	</div>

</div>

<div id="voices" class="hidden">
	<form id="voices-form">
		<fieldset>
			<legend>Change text-to-speech options</legend>
			<%= label_tag 'Voices for phrases' %>
			<select id="phrase-voice">
				<option value="">None</option>
				<%= selected_voice @lesson.course.phrase_voice %>
			</select>
			<%= label_tag 'Voices for responses' %>
			<select id="response-voice">
				<option value="">None</option>
				<%= selected_voice @lesson.course.response_voice %>
			</select>
			<%= submit_tag %>
		</fieldset>
	</form>
</div>


<div id="timeout">
	<h2>Taking time out</h2>
	Click to continue
</div>

