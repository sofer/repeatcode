<% if logged_in? -%>
  <div class="bottom-left">Logged in as <%= link_to_current_user :content_method => :login %></div>
  <div class="bottom-right"><%= link_to "logout", logout_path, { :title => "logout" }    %></div>
<% else -%>
  <div class="bottom-left">Not logged in</div>
  <div class="bottom-right"><%= link_to_unless_current "login",  login_path,  { :title => "login" } %> /
                               <%= link_to_unless_current "sign up", signup_path, { :title => "Create an account" } %></div>
<% end -%>
