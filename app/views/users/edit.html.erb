<div id="header">
	<h1>
		<%= link_to 'Home', '/courses' %>
		<%= '&raquo; ' + @user.login if @user.login %>
		&raquo; Account details
	</h1>
</div>

<div id="account" class="main">

	<div class="announce">
		Drag this link to your bookmark bar:
		<%= link_to name_from_domain(request.domain) + ' login', '/u/' + current_user.uid , :class => 'box-text' %>
		in order to login automatically next time.
	</div>

	<% form_for @user do |f| -%>

		<div class="box">
			<fieldset>
				<legend>Edit your details</legend>
				<div>
					<label>Your ID</label>
					<code><%= current_user.uid %></code>
				</div>
				<div>
					(Make a note of it and keep it safe.)
				</div>
				<div>
					<label>Logged in from</label>
					<code><%= current_user.last_login %></code>
				</div>
				<div>
					<label>Logged in at</label>
					<code><%= formatted_date_time current_user.updated_at %></code>
				</div>
				<div>
					<label for="organization">Organization</label>
					<%= f.select(:organization_id, Organization.all.collect { |org| [ org.name, org.id ] }, { :include_blank => 'None' }) %>
				</div>
				<div>
						<label for="login">Login</label>
						<%= f.text_field :login, :autocomplete => "off" %>
				</div>
				<div>
					<label for="email">Email</label>
					<%= f.text_field :email, :autocomplete => "off" %>
				</div>
				<div>
					<label for="voice">Text to speech</label>
					<%= f.check_box :voice %> 
					<%= link_to 'Help', :controller => 'about', :action => 'voice' %>
				</div>
			</fieldset>
			<div class="warning message"></div>
		</div>

		<div class="submit">
			<%= submit_tag 'Update' %>
		</div>
		
	<% end -%>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>