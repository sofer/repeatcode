<div id="header">
	<h1>
		<%= @group.organization.name %>
		&raquo; <%=link_to @group.name, @group %>
		&raquo; Add users
	</h1>
</div>

<div id="main">
	<% for user in @users %>
		<div class="row">
			<div class="bold cell third">
					<%= user.login %>
			</div>
			<div class="bold cell third">
				
			</div>
			<div class="cell sixth right">
				<% if @group.tutors.include? user %>
					TUTOR
				<% else %>
					<% form_for(@group)  do |f| %>
						<%= f.hidden_field :tutor_id, :value => user.id %>
						<%= f.submit "Make tutor" %>
					<% end %>
				<% end %>
			</div>
			<div class="cell sixth right">
				<% if @group.students.include? user %>
					Already in group
				<% else %>
					<% form_for(@group)  do |f| %>
						<%= f.hidden_field :student_id, :value => user.id %>
						<%= f.submit "Add to group" %>
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>

	<div class="centre">
		<%= will_paginate @users %>
	</div>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>
