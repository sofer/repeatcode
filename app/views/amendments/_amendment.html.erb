<tr class="<%= cycle "odd", "even" -%>">
  <td class="first"> <%= amendment_counter + 1 %> </td>
  <td>
    <%= amendment.exercise.topic.name %>
  </td>
  <td>
    <%= amendment.exercise.id %>
  </td>
  <td>
    <%= amendment.kind %>
  </td>
  <td>
    <%= amendment.text %>
  </td>
  <td>
    <%= amendment.comments %>
  </td>
  <td>
    <%= amendment.user_id %>
  </td>
  <td class="last">
  </td>
</tr>
