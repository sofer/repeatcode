<div id="header">
	<h1>
		<%= link_to 'Courses', courses_path %>
		&raquo; <%= @course.name %>
	</h1>
	<h2>
		<%= render :partial => 'global/course_links' %>
	</h2>
</div>

<div class="main">

	<table class="questions-table">
		<thead>
			<tr>
				<th></th>
				<th>Response</th>
				<th>Topic</th>
				<th></th>
				<th>Due date</th>
				<th>Interval</th>
				<th>Progress</th>
			</tr>
		</thead>
		<tbody id="questions">
			<%= render :partial => "question", :collection => @questions %>
		</tbody>
	</table>

	<div id="table-navigation">
		<span id="up" class="button">&laquo; Previous</span>
		<span id="down" class="button">Next &raquo;</span>
	</div>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>