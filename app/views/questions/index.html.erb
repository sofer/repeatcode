<div id="header">
	<h1 class="top-left pad">
		<%= link_to 'Courses', courses_path %>
		&raquo; <%= @course.subject.name if @course %>
	</h1>
	<div class="top-right pad">
		<%= render :partial => 'global/course_links' %>
	</div>
</div>

<div id="main">

	<div class="row">
		<div class="bold cell third">Response</div>
		<div class="bold cell third">Topic</div>
		<div class="bold cell twelfth"> </div>
		<div class="bold cell twelfth centre">Due date</div>
		<div class="bold cell twelfth centre">Interval</div>
		<div class="bold cell twelfth">Progress</div>
  </div>

	<% for question in @questions %>
	<div class="row">
    <div class="cell third"><%= truncate question.exercise.response, 40 %></div>
    <div class="cell third"><%= truncate question.exercise.topic.name, 40 %></div>
		<div class="cell twelfth centre error"><%= 'DUE' if question.next_datetime < Time.now %></div>
		<div class="cell twelfth centre"><%= short_date question.next_datetime %></div>
    <div class="cell twelfth centre"><%= question.current_interval %></div>
		<div class="cell twelfth centre"><%= link_to question.responses.count, question %></div>
  </div>
	<% end %>

	<div class="centre pad">
		<%= will_paginate @questions %>
	</div>

</div>

<div id="footer">

	<div class="bottom-left">
		Logged in as: <%= current_user.login %>
	</div>
	<div class="bottom-right">
		<%= render :partial => 'global/toplevel_links' %>
	</div>
</div>