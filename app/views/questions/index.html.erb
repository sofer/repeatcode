<div id="header">
	<h1 class="left">
		<%= link_to 'Courses', courses_path %> |
		lessons |
		<%= link_to 'intervals', course_intervals_path(@course)  if @course %> |
		<%= @course.subject.name if @course %> |
		recent questions
	</h1>
	<div class="right">
		<%= @course.questions.count  if @course %> / 
		<%= @course.subject.exercise_count  if @course %>
	</div>
	<br clear="all">
</div>

<div id="main">
	<table>
	  <tr>
			<th>ID</th>
	    <th>Course</th>
	    <th>Exercise</th>
			<th>Interval</th>
			<th>Next time</th>
	  </tr>

	<% for question in @questions %>
	  <tr>
	    <td><%=h question.id %></td>
	    <td><%=h question.course_id %></td>
	    <td><%=h question.exercise_id %></td>
	    <td><%=h question.current_interval %></td>
	    <td><%=h formatted_date question.next_datetime %></td>
			<td><%= link_to 'Responses', question %></td>
	  </tr>
	<% end %>
	</table>
</div>

<div id="footer">
	<div class="center">
		<%= will_paginate @questions %>
	</div>
	<div class="left">
		Logged in as: <%= current_user.login %>
	</div>
	<div class="right">
		<%= link_to "logout", "/logout"%>
	</div>
</div>