<div id="header">
	<div id="header">
		<h1 class="top-left pad">
			<%= link_to 'Courses', courses_path %>
			&raquo; <%= @course.subject.name if @course %>
			&raquo; <%= truncate @question.phrase, 40 %>
		</h1>
		<div class="top-right pad">
			<%= render :partial => 'global/course_links' %>
		</div>
	</div>
</div>

<div id="main">
	<div class="row">
    <div class="bold cell quarter">Date</div>
    <div class="bold cell quarter right">Time taken</div>
		<div class="bold cell quarter right">Interval</div>
		<div class="bold cell quarter right">Result</div>
	</div>

	<% for response in @responses %>
		<div class="row">
			<div class="cell quarter">
				<%= formatted_date_time response.updated_at %>
			</div>
			<div class="cell quarter right">
				<%=h response.seconds_taken %> secs
			</div>
			<div class="cell quarter right">
				<%=h response.interval %>
			</div>
			<div class="cell quarter right">
				<%=h response.result %>
			</div>
		</div>	
	<% end %>
	
	<div class="centre pad">
		<%= will_paginate @responses %>
	</div>
	

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>
