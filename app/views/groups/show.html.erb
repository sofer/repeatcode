<div id="header">
	<h1>
		<%= @organization.name %>
		&raquo; <%= link_to 'Tutor groups', groups_path %>
		&raquo; <%= @group.name %>
	</h1>
	<h2>
		Add courses
		| <%= link_to 'Add students', group_users_path(@group) %>
	</h2>
</div>

<div class="main">
	
	<table>
		<thead>
			<tr>
				<th>TUTORS</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for tutor in @tutors %>
				<tr>
					<td class="heading">
						<%= tutor.login %>
					</td>
					<td>
						<%= @group.students.count %> students
					</td>
					<td>
						<% unless tutor == current_user %>
							<% form_for(@group)  do |f| %>
								<%= f.hidden_field :tutor_id, :value => tutor.id %>
								<%= f.submit "Remove" %>
							<% end %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<table class="admin-table">
		<thead>
			<tr>
				<th>STUDENTS</th>
				<th>Last update</th>
				<th>Courses</th>
				<th></th>
			</tr>
		</thead>
		<tbody id="students">
			<% for student in @students %>
				<tr>
					<td class="heading">
						<%= student.login %>
					</td>
					<td>
						<%= relative_date student.updated_at %>
					</td>
					<td>
						<%= student.courses.active.count %>
					</td>
					<td>
						<% form_for(@group)  do |f| %>
							<%= f.hidden_field :student_id, :value => student.id %>
							<%= f.submit "Remove" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
	<div id="table-navigation">
		<span id="up" class="button">&laquo; Previous</span>
		<span id="down" class="button">Next &raquo;</span>
	</div>
	
</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>
