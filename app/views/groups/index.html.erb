<div id="header">
	<h1 class="top-left pad">
		<%= @organization.name %>
		&raquo; Tutor groups
	</h1>
	<h2 class="top-right pad">
		<% form_for(@group) do |f| %>
			<%= f.text_field :name %>
			<%= f.submit "Create new" %>
		<% end %>
	</h2>
</div>

<div id="main">
	<% for group in @groups %>
		<div class="row">
			<div class="bold cell half">
					<%= group.name %>
			</div>
			<div class="bold cell quarter right">
				<%= group.students.count %> students
			</div>
			<div class="cell eighth right">
					<%= link_to 'View group', group %>
			</div>
			<div class="cell eighth right">
				<%= link_to 'Delete', group, :method => :delete if group.students.empty? %>
			</div>
		</div>
	<% end %>

	<div class="centre">
		<%= will_paginate @groups %>
	</div>

</div>

<div id="footer">
	<div class="bottom-left">
		Logged in as: <%= current_user.login %>
	</div>
	<div class="bottom-right">
		<%= render :partial => 'global/toplevel_links' %>
	</div>
</div>