<div id="header">
	<h1 class="top-left pad">
		Courses
	</h1>
</div>

<div id="main">

	<table class="courses-table">
		<thead>
			<tr>
				<th> </th>
				<th> </th>
				<th>Today</th>
				<th>Backlog</th>
				<th>Last lesson</th>
				<th> </th>
				<th> </th>
				<th> </th>
				<th> </th>
			</tr>
		</thead>
		<tbody id="courses">
			<%= render :partial => "course", :collection => @courses.active %>
		</tbody>
	</table>

	<div id="navigation" class="bottom-left hidden">
		<span id="up" class="button space-right">&laquo; Previous</span>
		<span id="down" class="button">Next &raquo;</span>
	</div>

	<div class="bottom-right">
		<div class="bold button">
			<%= link_to 'Choose a new course', new_course_path %>
		</div>
	</div>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>