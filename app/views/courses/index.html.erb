<div id="header">
	<h1 class="left">
		Courses
	</h1>
	<h2 class="right">
		<%= link_to 'Choose a new course', new_course_path %>
	</h2>
	<div class="clear"></div>
</div>
<div id="main">
	<table>
	<% for course in @courses %>
		<tr>
			<td>
				<% form_for :lesson,
		 								:url => course_lessons_path(course) do |f| %>
					<%= f.submit "Learn now" %>
				<% end %>
			</td>
			<td class="half bold">
				<% if course.subject %>
					<%= course.subject.name %>
				<% else %>
					[ course removed ]
				<% end %>
			</td>
			<td>
				<%= link_to "Report", course_path(course) %>
			</td>
			<td>
				<%= link_to "Intervals", course_intervals_path(course) %>
			</td>
			<td>
				Rate
			</td>
			<td>
				<%= link_to @action, course_path(course), :method => :put %>
			</td>
			<td>
				<%= link_to 'Delete', course, :confirm => 'WARNING! This will destroy all course content. Do you really want to do this?', :method => :delete %>
			</td>
		</tr>
	<% end %>
	</table>
</div>

<div id="footer">
	<div class="left">
		<br>
		Logged in as: <%= current_user.login %>
	</div>
	<div class="right">
		<div class="right">
			<br>
			<%= link_to "Course materials", :controller => 'subjects', :action => 'index' %>
			| <%= link_to_unless_current "Archive", :controller => 'courses', :action => 'index', :archived => '' %>
			| <%= link_to "FAQ", "/about/faq" %>
			| <%= link_to "logout", "/logout"%>
		</div>
	</div>
	<div class="center">
		<%= will_paginate @courses %>
	</div>
</div>