<div id="header">
	<h1>
		<%= name_from_domain request.domain %>
		<span class="italic">pre-launch</span>
	</h1>
	<h2>
		<%= render :partial => 'global/site_links'%>
	</h2>
</div>
<div class="main">

	<div>
		Welcome to <%= name_from_domain request.domain %>! Select a course and start studying now.
	</div>

	<div class="col3">

	<% row = 0; limit = 15 %>
	<% for area in @areas %>
		<% next if area.subjects.public.count == 0 %>
		<% if row >= limit - 4 %>
			<% row = 0 %>
			</div><div class="col3">
			<% row = 0 %>
		<% end %>
		<% row += 2 %>
		<h3> <%= area.name %> </h3>
		<% for subject in area.subjects.public %>
			<% if row >= limit %>
			</div><div class="col3">
				<% row = 0 %>
			<% end %>
			<% row += 1 %>
			<% form_for :course, :url => subject_courses_path(subject) do |f| %>
				<div class="new-course">
					<%= f.submit "#{subject.name} (#{subject.exercises.current.count})", :description => subject.description %>
					<div class="description"><%= subject.description %></div>
				</div>
				<% end %>
		<% end %>
		</ul>
	<% end %>
	<% if current_user and current_user.subjects.private.count > 0 %>
	<h3>Not public</h3>
		<% for subject in current_user.subjects.private %>
			<% if row >= limit %>
			</div><div class="col3">
				<% row = 0 %>
			<% end %>
			<% row += 1 %>
			<% form_for :course, :url => subject_courses_path(subject) do |f| %>
				<div class="new-course">
					<%= f.submit "#{subject.name} (#{subject.exercises.current.count})" %>
				</div>
				<% end %>
		<% end %>
	<% end %>

	</div>

</div>

<div id="footer">
		<%= render :partial => 'global/toplevel_links' %>
</div>