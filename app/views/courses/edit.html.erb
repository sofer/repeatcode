<div id="header">
	<h1 class="top-left pad">
		<%= link_to 'Courses', courses_path %>
		&raquo; <%= @course.subject.name if @course %>
	</h1>
	<div class="top-right pad">
		<%= render :partial => 'global/course_links' %>
	</div>
</div>

<div id="main">
	<table class="course-topics-table">
		<thead>
			<tr>
				<th> </th>
				<th> </th>
				<th>Started</th>
				<th>Queued</th>
				<th>Total</th>
				<th></th>
			</tr>
		</thead>
		<tbody id="course-topics">

			<%= render :partial => "course_topic", :collection => @course.course_topics.current %>

		</tbody>
	</table>

	<div id="navigation" class="bottom-left hidden">
		<span id="up" class="button space-right">&laquo; Previous</span>
		<span id="down" class="button">Next &raquo;</span>
	</div>

</div>

<div id="footer">
	<%= render :partial => 'global/toplevel_links' %>
</div>