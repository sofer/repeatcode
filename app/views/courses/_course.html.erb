<tr>
  <% fields_for(course) do |f| %>
		<td>
			<% form_for :lesson,
	 								:url => course_lessons_path(course) do |f| %>
				<%= f.submit "Learn now" %>
			<% end %>
		</td>
		<td class="name">
			<%= course.name %>
		</td>
		<td class="warning">
			<%= 'On target' if course.on_target? %>
		</td>
		<td>
			<%= course.backlog_count %>
		</td>
		<td>
			<%= relative_date course.lessons.last.updated_at if course.lessons.last %>
		</td>
		<td>
			<% if course.update_required? %>
				<% form_for course do |f| %>
					<%= f.submit 'Update' %>
				<% end %>
			<% end %>
		</td>
		<td>
			<%= link_to "manage", course_path(course) %>
		</td>
		<td>
			<% form_for course do |f| %>
				<%= f.hidden_field :archived, :value => true  %>
				<%= f.submit 'Archive' %>
			<% end %>
		</td>
	<% end %>
</td>